<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgholderPayment"
            android:layout_width="123dp"
            android:layout_height="130dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tittleholderPaymentTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="title"
            android:textColor="@color/blue_gray"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imgholderPayment"
            app:layout_constraintTop_toTopOf="@+id/imgholderPayment" />

        <TextView
            android:id="@+id/totalEachItemholderPaymentTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="$0"
            android:textColor="@color/blue_gray"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tittleholderPaymentTxt"
            app:layout_constraintTop_toBottomOf="@+id/tittleholderPaymentTxt" />

        <TextView
            android:id="@+id/feeEachItemholderPaymentTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="VND 0"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imgholderPayment"
            app:layout_constraintStart_toEndOf="@+id/imgholderPayment"
            app:layout_constraintTop_toBottomOf="@+id/totalEachItemholderPaymentTxt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>